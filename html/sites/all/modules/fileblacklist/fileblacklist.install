/**
 * Implementation of hook_schema().
 */
function fileblacklist_schema() {
  $schema['fileblacklist'] = array(
    'description' => 'File blacklist.',
    'fields' => array(
      'fid' => array(
        'description' => 'File identifier.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'sha256' => array(
        'description' => 'The sha256 digest for this file.',
        'type' => 'varchar',
        'length' => 64,
        'not null' => TRUE,
        'default' => '',
      ),
      'type' => array(
        'description' => 'Type of denial action (currently unused).',
        'type' => 'int',
        'size' => 'tiny',
        'not null' => TRUE,
        'default' => 0,
      ),
    ),
    'primary key' => array('fid'),
    'unique keys' => array(
      'sha256' => array('sha256'),
    ),
  );
  return $schema;
}

/**
 * Implementation of hook_install().
 */
function fileblacklist_install() {
  drupal_install_schema('fileblacklist');
}

/**
 * Implementation of hook_uninstall().
 */
function fileblacklist_uninstall() {
  drupal_uninstall_schema('fileblacklist');
}
