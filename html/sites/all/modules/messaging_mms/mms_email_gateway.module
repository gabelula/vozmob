/**
 * Return an array of MMS e-mail gateways and corresponding SMS e-mail gateways.
 */
function mms_email_gateway_get_map() {
  return array(
    'messaging.nextel.com' => 'page.nextel.com',
    'mms.att.net' => 'txt.att.net',
    'vzwpix.com' => 'vtext.com',
  );
}

/**
 * Return an SMS e-mail gateway given an MMS e-mail gateway.
 */
function mms_email_gateway_get_sms($gateway) {
  $gateways = mms_email_gateway_get_map();
  if (isset($gateways[$gateway])) {
    return $gateways[$gateway];
  }
}

/**
 * Return an MMS e-mail gateway given an SMS e-mail gateway.
 */
function mms_email_gateway_get_mms($gateway) {
  $gateways = array_flip(mms_email_gateway_get_map());
  if (isset($gateways[$gateway])) {
    return $gateways[$gateway];
  }
}
